{
  "name": "result-ts",
  "version": "0.2.2-beta",
  "description": "Result TS: The type safe result library for Typescript.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm clean && tsc && tsc-alias",
    "build:watch": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "result",
    "rust",
    "error-handling",
    "typescript",
    "zod",
    "validation",
    "functional",
    "modular",
    "type-safe"
  ],
  "author": "Gregory Laurent",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js",
      "require": "./dist/validation.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "import": "./dist/base.js",
      "require": "./dist/base.js"
    }
  },
  "peerDependencies": {
    "zod": "^3.25.67"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  }
}
