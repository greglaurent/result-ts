{
  "name": "result-ts",
  "version": "0.2.1-beta",
  "description": "Result TS: The type safe result library for Typescript.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "pack": "pnpm build && pnpm pack",
    "pack:test": "pnpm pack && mkdir -p releases && mv *.tgz releases/",
    "pack:install": "pnpm pack && npm install ./result-ts-*.tgz",
    "pack:clean": "rm -f *.tgz && rm -rf releases/",
    "prepack": "pnpm run pack:clean && pnpm run build"
  },
  "keywords": [
    "result",
    "rust",
    "error-handling",
    "typescript",
    "zod",
    "validation",
    "functional",
    "modular",
    "type-safe"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Gregory Laurent",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.js"
    }
  },
  "peerDependencies": {
    "zod": "^3.25.67"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  }
}
