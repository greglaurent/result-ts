{
  "name": "result-ts",
  "version": "0.3.1-beta",
  "description": "The performance-first Result library with comprehensive utilities and zero overhead.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm clean && tsc && tsc-alias",
    "build:watch": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "clean": "rm -rf dist",
    "dev": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "lint": "echo \"Linting coming soon\" && exit 0",
    "prepublishOnly": "pnpm build",
    "test": "echo \"Tests coming soon\" && exit 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "result",
    "error-handling",
    "typescript",
    "performance",
    "functional-programming",
    "rust-style",
    "type-safe",
    "zero-overhead",
    "async",
    "validation",
    "zod",
    "fp",
    "monad",
    "either"
  ],
  "author": {
    "name": "Gregory Laurent",
    "email": "your-email@example.com",
    "url": "https://your-website.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-username/result-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/result-ts.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/result-ts/issues"
  },
  "packageManager": "pnpm@10.12.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js",
      "require": "./dist/validation.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "import": "./dist/base.js",
      "require": "./dist/base.js"
    }
  },
  "peerDependencies": {
    "zod": "^3.25.67"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "tsc-alias": "^1.8.10",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  }
}
